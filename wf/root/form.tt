[%# vim: set filetype=tt2: -%]
[%UNLESS footer%]
[%- form.script %]
[%- form.start %]
[%- form.statetags %]
<table>
[% FOREACH field=form.fields %]
	<tr>
	<td style="vertical-align:top">[%field.label%]</td>
	<td>[%IF field.name=='uploader'%][%INCLUDE uploader.tt%][%ELSE%][%field.readonly ? field.value : field.render%][%END%]</td>
	[%-IF field.desc%]<td>[%field.desc%]</td>[%END%]
	</tr>
[% END %]
</table>
[%ELSE%][%#footer%]
<div style="margin-top:1em;margin-left:2em">
[% form.submit %]
</div>
[% form.end %]
[%END%]
